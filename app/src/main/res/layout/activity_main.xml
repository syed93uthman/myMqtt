<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idJsonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="ID"
        app:layout_constraintBottom_toBottomOf="@+id/idTextView"
        app:layout_constraintStart_toEndOf="@+id/idTextView"
        app:layout_constraintTop_toTopOf="@+id/idTextView" />

    <TextView
        android:id="@+id/latJsonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Latitude"
        app:layout_constraintStart_toStartOf="@+id/idJsonTextView"
        app:layout_constraintTop_toBottomOf="@+id/idJsonTextView" />

    <TextView
        android:id="@+id/altJsonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Altitude"
        app:layout_constraintStart_toStartOf="@+id/longJsonTextView"
        app:layout_constraintTop_toBottomOf="@+id/longJsonTextView" />

    <TextView
        android:id="@+id/elevationJsonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Elevation"
        app:layout_constraintStart_toStartOf="@+id/altJsonTextView"
        app:layout_constraintTop_toBottomOf="@+id/altJsonTextView" />

    <TextView
        android:id="@+id/headingJsonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Heading"
        app:layout_constraintStart_toStartOf="@+id/elevationJsonTextView"
        app:layout_constraintTop_toBottomOf="@+id/elevationJsonTextView" />

    <TextView
        android:id="@+id/longJsonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Longitude"
        app:layout_constraintStart_toStartOf="@+id/latJsonTextView"
        app:layout_constraintTop_toBottomOf="@+id/latJsonTextView" />

    <EditText
        android:id="@+id/headingTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Message"
        android:inputType="textPersonName"
        android:text="6"
        app:layout_constraintStart_toStartOf="@+id/elevationTextView"
        app:layout_constraintTop_toBottomOf="@+id/elevationTextView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heading"
        app:layout_constraintBottom_toBottomOf="@+id/headingTextView"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/headingTextView" />

    <EditText
        android:id="@+id/elevationTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Message"
        android:inputType="textPersonName"
        android:text="5"
        app:layout_constraintStart_toStartOf="@+id/altTextView"
        app:layout_constraintTop_toBottomOf="@+id/altTextView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elevation"
        app:layout_constraintBottom_toBottomOf="@+id/elevationTextView"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/elevationTextView" />

    <EditText
        android:id="@+id/altTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Message"
        android:inputType="textPersonName"
        android:text="4"
        app:layout_constraintStart_toStartOf="@+id/longTextView"
        app:layout_constraintTop_toBottomOf="@+id/longTextView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Altitude"
        app:layout_constraintBottom_toBottomOf="@+id/altTextView"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/altTextView" />

    <EditText
        android:id="@+id/longTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Message"
        android:inputType="textPersonName"
        android:text="3"
        app:layout_constraintStart_toStartOf="@+id/latTextView"
        app:layout_constraintTop_toBottomOf="@+id/latTextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude"
        app:layout_constraintBottom_toBottomOf="@+id/longTextView"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/longTextView" />

    <EditText
        android:id="@+id/latTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Message"
        android:inputType="textPersonName"
        android:text="2"
        app:layout_constraintStart_toStartOf="@+id/idTextView"
        app:layout_constraintTop_toBottomOf="@+id/idTextView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude"
        app:layout_constraintBottom_toBottomOf="@+id/latTextView"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/latTextView" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="Connect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/brokerIpTextView"
        app:layout_constraintTop_toTopOf="@+id/brokerIpTextView" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        app:layout_constraintEnd_toEndOf="@+id/connectButton"
        app:layout_constraintTop_toTopOf="@+id/portTextView" />

    <EditText
        android:id="@+id/brokerIpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Broker Ip"
        android:inputType="textPersonName"
        android:text="192.168.0.176"
        app:layout_constraintStart_toStartOf="@+id/connectStatusTextView"
        app:layout_constraintTop_toBottomOf="@+id/connectStatusTextView" />

    <EditText
        android:id="@+id/topicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Topic"
        android:inputType="textPersonName"
        android:text="/drone1/data"
        app:layout_constraintStart_toStartOf="@+id/portTextView"
        app:layout_constraintTop_toBottomOf="@+id/portTextView" />

    <EditText
        android:id="@+id/portTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Port(1883)"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/brokerIpTextView"
        app:layout_constraintTop_toBottomOf="@+id/brokerIpTextView" />

    <EditText
        android:id="@+id/idTextView"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Message"
        android:inputType="textPersonName"
        android:text="1"
        app:layout_constraintStart_toStartOf="@+id/topicTextView"
        app:layout_constraintTop_toBottomOf="@+id/topicTextView" />

    <TextView
        android:id="@+id/connectStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/messageActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Message Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sendButton" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="ID"
        app:layout_constraintBottom_toBottomOf="@+id/idTextView"
        app:layout_constraintEnd_toStartOf="@+id/idTextView"
        app:layout_constraintTop_toTopOf="@+id/idTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>